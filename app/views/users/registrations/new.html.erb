<div class="min-h-screen flex bg-[#080e1e]">

  <%= render "users/shared/hero_panel" %>

  <%# ─── Right panel: sign up form ─────────────────────────────────────────── %>
  <div class="flex-1 flex flex-col justify-center px-8 sm:px-14 lg:px-20">
    <div class="w-full max-w-md mx-auto">

      <p class="text-[#6b8db3] text-sm mb-1">Get started for free</p>
      <h1 class="text-white text-4xl font-bold mb-2">Create Account</h1>
      <p class="text-[#6b8db3] text-sm mb-9">Fill in the details below to create your account</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render "users/shared/error_messages", action_label: "prevented sign up" %>

        <%# Name %>
        <div class="mb-5">
          <%= f.label :name, "Full name", class: "block text-[#7a93b4] text-sm mb-2" %>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none">
              <svg class="w-4 h-4 text-[#4a6a8a]" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </span>
            <%= f.text_field :name,
                  autocomplete: "name",
                  placeholder: "Your full name",
                  class: "w-full bg-[#0d1f3e] border border-[#1e3563] text-white placeholder-[#3a5070] rounded-xl pl-11 pr-4 py-3.5 text-sm focus:outline-none focus:border-[#3060b0] focus:ring-1 focus:ring-[#3060b0] transition-colors" %>
          </div>
        </div>

        <%# Email %>
        <div class="mb-5">
          <%= f.label :email, "Email address", class: "block text-[#7a93b4] text-sm mb-2" %>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none">
              <svg class="w-4 h-4 text-[#4a6a8a]" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </span>
            <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  placeholder: "you@example.com",
                  class: "w-full bg-[#0d1f3e] border border-[#1e3563] text-white placeholder-[#3a5070] rounded-xl pl-11 pr-4 py-3.5 text-sm focus:outline-none focus:border-[#3060b0] focus:ring-1 focus:ring-[#3060b0] transition-colors" %>
          </div>
        </div>

        <%# Password %>
        <div class="mb-5">
          <div class="flex items-baseline justify-between mb-2">
            <%= f.label :password, "Password", class: "text-[#7a93b4] text-sm" %>
            <% if @minimum_password_length %>
              <span class="text-[#4a6a8a] text-xs"><%= @minimum_password_length %> characters minimum</span>
            <% end %>
          </div>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none">
              <svg class="w-4 h-4 text-[#4a6a8a]" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </span>
            <%= f.password_field :password,
                  autocomplete: "new-password",
                  placeholder: "Create a password",
                  class: "w-full bg-[#0d1f3e] border border-[#1e3563] text-white placeholder-[#3a5070] rounded-xl pl-11 pr-4 py-3.5 text-sm focus:outline-none focus:border-[#3060b0] focus:ring-1 focus:ring-[#3060b0] transition-colors" %>
          </div>
        </div>

        <%# Password confirmation %>
        <div class="mb-8">
          <%= f.label :password_confirmation, "Confirm password", class: "block text-[#7a93b4] text-sm mb-2" %>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none">
              <svg class="w-4 h-4 text-[#4a6a8a]" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </span>
            <%= f.password_field :password_confirmation,
                  autocomplete: "new-password",
                  placeholder: "Repeat your password",
                  class: "w-full bg-[#0d1f3e] border border-[#1e3563] text-white placeholder-[#3a5070] rounded-xl pl-11 pr-4 py-3.5 text-sm focus:outline-none focus:border-[#3060b0] focus:ring-1 focus:ring-[#3060b0] transition-colors" %>
          </div>
        </div>

        <%= f.submit "Create account",
              class: "w-full bg-[#0f1525] hover:bg-[#182038] text-white font-medium py-4 rounded-full border border-[#1e3060] transition-colors cursor-pointer text-sm tracking-wide" %>

      <% end %>

      <div class="mt-8 text-center">
        <p class="text-[#6b8db3] text-sm">
          Already have an account?
          <%= link_to "Sign in", new_session_path(resource_name),
                class: "text-[#4a8ae0] hover:text-[#6aaaf8] transition-colors" %>
        </p>
      </div>

    </div>
  </div>

</div>
